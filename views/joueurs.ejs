<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>FootDiv</title>
    <meta name="description" content=""/>
    <link href="../css/style.css" rel="stylesheet" type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <header>
        <h1>
            <img id="menuButton" src="" alt="icon_burger_menu">  
            <a href="/">Gestion football</a>
        </h1>
    </header>
    <main>
        <div class="liste_joueurs">
            <h2>Liste des joueurs : </h2>
            <ul><% for(var i = 0; i < joueurs.length; i++){ %>
                <li><%= joueurs[i].nom_joueurs %> 
                    <a href="/joueurs_modif/<%= joueurs[i].idjoueurs %>" class="modifier">Modifier</a>
                    <a href="/joueurs_supp/<%= joueurs[i].idjoueurs %>" class="supprimer">Supprimer</a></li>
                    <ul>
                        <li> <%= joueurs[i].age_joueurs %> ans</li>
                        <li> <%= joueurs[i].poste_joueurs %> </li>
                        <li> <%= joueurs[i].nom_equipes %></li></br>
                    </ul>
              <% } %> </ul>
            <p> 
                <a href="ajouter_joueurs" class="ajouter">Ajouter un joueur</a>
            </p>
        </div>
    </main>
    <nav id="mainMenu">
      <a href="/">accueil</a>
      <a href="/joueurs">joueurs</a>
      <a href="/equipes">équipes</a>
      <a href="/championnats">championnats</a>
    </nav>

    <footer>2020, copyright © FootDiv</footer>
    <div id="overlay"></div>
</body>
</html>